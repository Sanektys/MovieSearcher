<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="60"
                android:propertyName="scaleX"
                android:valueFrom="1.0"
                android:valueTo="0.95"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="60"
                android:propertyName="scaleY"
                android:valueFrom="1.0"
                android:valueTo="0.95"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="60"
                android:propertyName="alpha"
                android:valueFrom="@dimen/activity_main.posters_bar.poster.alpha"
                android:valueTo="1.0"
                android:valueType="floatType" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator
                android:duration="200"
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="200"
                android:propertyName="scaleY"
                android:valueTo="1.0"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="200"
                android:propertyName="alpha"
                android:valueTo="@dimen/activity_main.posters_bar.poster.alpha"
                android:valueType="floatType" />
        </set>
    </item>
</selector>