<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="40"
                android:propertyName="scaleX"
                android:valueFrom="1.0"
                android:valueTo="0.9"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="40"
                android:propertyName="scaleY"
                android:valueFrom="1.0"
                android:valueTo="0.9"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="40"
                android:propertyName="alpha"
                android:valueFrom="@dimen/activity_main.movies_recycler.movie_card.poster.alpha"
                android:valueTo="1.0"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="100"
                android:interpolator="@android:interpolator/accelerate_quad"
                android:propertyName="translationX"
                android:valueFrom="0"
                android:valueTo="30" />
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator
                android:duration="150"
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="150"
                android:propertyName="scaleY"
                android:valueTo="1.0"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="150"
                android:propertyName="alpha"
                android:valueTo="@dimen/activity_main.movies_recycler.movie_card.poster.alpha"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="150"
                android:interpolator="@android:interpolator/accelerate_cubic"
                android:propertyName="translationX"
                android:valueTo="0" />
        </set>
    </item>
</selector>