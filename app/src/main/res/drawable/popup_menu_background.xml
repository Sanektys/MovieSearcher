<?xml version="1.0" encoding="utf-8"?>
<inset
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/popup_menu.margin_horizontal"
    android:insetRight="@dimen/popup_menu.margin_horizontal">

    <shape android:shape="rectangle">
        <corners android:radius="@dimen/popup_menu.corner_radius" />
        <solid android:color="?attr/colorSecondaryContainer" />
        <stroke
            android:color="?attr/colorOutline"
            android:width="@dimen/popup_menu.stroke_width"/>
        <padding
            android:left="@dimen/popup_menu.corner_radius"
            android:right="@dimen/popup_menu.corner_radius" />
    </shape>
</inset>