<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/activity_main.movie_promotion.animation.disappearance.duration">

    <scale
        android:interpolator="@android:interpolator/accelerate_cubic"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="@dimen/activity_main.movie_promotion.animation.scale"
        android:toYScale="@dimen/activity_main.movie_promotion.animation.scale" />

    <alpha
        android:interpolator="@android:interpolator/accelerate_cubic"
        android:fromAlpha="1"
        android:toAlpha="0" />
</set>