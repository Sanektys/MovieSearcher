<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main.top_bar.height"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/poster1"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_1"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster2"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_5"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster3"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_4"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster4"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_6"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster5"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_2"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster6"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_3"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster7"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_7"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/poster8"
                android:layout_width="@dimen/activity_main.top_bar.poster.width"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/poster_8"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/activity_main.center_container.horizontal_margin"
        android:layout_marginTop="@dimen/activity_main.center_container.vertical_margin"
        android:layout_marginEnd="@dimen/activity_main.center_container.horizontal_margin"
        android:layout_marginBottom="@dimen/activity_main.center_container.vertical_margin"
        android:background="@color/activity_main.center_container"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintWidth_default="spread">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_main.center_container.button.margin_top"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_main.center_container.button.margin_top"
            android:text="Button" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_main.center_container.button.margin_top"
            android:text="Button" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_main.center_container.button.margin_top"
            android:text="Button" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main.bottom_bar.height"
        android:background="@color/activity_main.bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>