<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_bar"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentPaddingRight="@dimen/activity_main.toolbar.padding_horizontal"
        app:contentPaddingLeft="@dimen/activity_main.toolbar.padding_horizontal"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Bottom">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimaryContainer"
            app:titleMarginBottom="@dimen/activity_main.toolbar.title.margin_bottom"
            app:titleCentered="true"
            app:menu="@menu/top_app_bar_menu"
            app:navigationIcon="@drawable/round_menu"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:titleTextColor="?attr/colorOnPrimaryContainer" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posters_bar"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main.posters_bar.height"
        android:layout_marginHorizontal="@dimen/activity_main.posters_bar.margin_horizontal"
        android:layout_marginTop="@dimen/activity_main.posters_bar.margin_vertical"
        app:cardBackgroundColor="?attr/colorSecondaryContainer"
        app:cardElevation="@dimen/activity_main.posters_bar.elevation"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/posters_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/activity_main.posters_bar.poster.dummy.width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/activity_main.posters_bar.poster.margin_end"
                    style="@style/Widget.Material3.CardView.Filled"
                    app:cardBackgroundColor="?attr/colorPrimaryInverse"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/activity_main.posters_bar.poster.dummy.width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/activity_main.posters_bar.poster.margin_end"
                    style="@style/Widget.Material3.CardView.Filled"
                    app:cardBackgroundColor="?attr/colorPrimaryInverse"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/activity_main.posters_bar.poster.dummy.width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/activity_main.posters_bar.poster.margin_end"
                    style="@style/Widget.Material3.CardView.Filled"
                    app:cardBackgroundColor="?attr/colorPrimaryInverse"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/activity_main.posters_bar.poster.dummy.width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/activity_main.posters_bar.poster.margin_end"
                    style="@style/Widget.Material3.CardView.Filled"
                    app:cardBackgroundColor="?attr/colorPrimaryInverse"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posters_source_link"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_main.posters_source_link.margin"
        app:cardBackgroundColor="?attr/colorSecondaryContainer"
        app:layout_constraintEnd_toEndOf="@id/posters_bar"
        app:layout_constraintTop_toBottomOf="@id/posters_bar"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/posters_source_link_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_main.posters_source_link.padding_horizontal"
            android:layout_marginBottom="@dimen/activity_main.posters_source_link.padding_vertical"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/activity_main.posters_source_link"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textColorHighlight="?attr/colorPrimaryInverse"
            android:textColorLink="?attr/colorSecondary" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_bar"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Top">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimaryContainer"
            app:menu="@menu/bottom_navigation_bar_menu"
            app:itemBackground="?attr/colorPrimaryContainer"
            app:itemTextAppearanceActive="@style/TextAppearance.Material3.LabelMedium"
            app:itemTextColor="@drawable/on_primary_container_click_color"
            app:itemActiveIndicatorStyle="@style/Widget.Material3.BottomNavigationView"
            app:itemIconTint="@drawable/on_primary_container_selected_state_color"
            app:itemIconSize="@dimen/activity_main.icon_size"
            app:labelVisibilityMode="selected"
            app:itemPaddingTop="@dimen/activity_main.bottom_navigation_bar.padding_top"
            app:itemPaddingBottom="@dimen/activity_main.bottom_navigation_bar.padding_bottom" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>